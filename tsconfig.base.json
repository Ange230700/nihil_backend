{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@nihil_backend/user/*": ["user/src/*"],
      "@nihil_backend/post/*": ["post/src/*"]
    }
  }
}
