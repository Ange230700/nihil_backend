{
  "name": "@nihil_backend/root",
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "user",
    "post"
  ],
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:all": "nx run-many --target=clean --all && rm -rf node_modules package-lock.json .eslintcache .nx/cache .nx/workspace-data",
    "build:all": "nx run @nihil_backend/user:build",
    "lint:all": "eslint --cache --fix && nx run-many --target=lint --all",
    "test:all": "nx run-many --target=test --all",
    "prepare": "husky",
    "copy-envs": "for d in user; do cp -n $d/.env.sample $d/.env || true; done",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "postinstall": "rm -rf user/dist user/tsconfig.tsbuildinfo && npm i --workspace=user nihildbuser@latest && npm i --workspace=post nihildbpost@latest && npm run build:all"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "@nx/devkit": "^21.3.9",
    "@nx/workspace": "^21.3.9",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "lint-staged": "^16.1.0",
    "nx": "21.3.10",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "validate-branch-name": "^1.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ange230700/nihil_backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Ange230700/nihil_backend/issues"
  },
  "homepage": "https://github.com/Ange230700/nihil_backend#readme",
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release)/.+$",
    "errorMsg": "Branch name must be master, main, develop, feature/xxx, fix/xxx, hotfix/xxx or release/xxx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
